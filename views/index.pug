extends layout.pug

block title
	+title(dateFormat(today, 'mmmm d'), 'Schedule')

block append scripts
	script(src='/js/pickahit.js' type='text/javascript')

block content
	div.row
		div.col-12.pb-3
			+scheduleNav(yesterday, today, tomorrow)

		if games.length == 0
			h5.col-8.offset-2.text-center There are no games scheduled for #{dateFormat(today, 'mmmm d')}.
		else
			each game in games
				+gameCard(game)
