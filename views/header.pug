- var additionalCssFiles = additionalCssFiles || [];
- var additionalJsFiles = additionalJsFiles || [];

doctype html
html
	head
		title
			if title
				| #{title} &laquo;
				|
			| Pick-a-Hit &laquo; Coinflipper

		link(href='/css/reset.css' rel='stylesheet')
		link(href='/css/pickahit.css' rel='stylesheet')
		each cssFile in additionalCssFiles
			link(href=cssFile rel='stylesheet')

		script(src='/js/jquery-3.2.1.min.js' type='text/javascript')
		each jsFile in additionalJsFiles
			script(src=jsFile type='text/javascript')

		link(href='/images/favicon.ico' rel='icon')

	body
		h1.title: a(href='/') Pick-a-Hit
		if session
			ul.navigation
				li: a(href='/users/edit/' + session.user.username) Settings
				li: a(href='/logout') Log Out
		else
			form.login(method='POST' action='/sessions')
				input(type='text' name='username' placeholder='Username')
				|
				|
				input(type='password' name='password' placeholder='Password')
				|
				|
				button(type='submit') Log In
