include mixins.pug

doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='google' content='notranslate')

		block title

		block styles
			link(href='/css/bootstrap-4.6.0.min.css' rel='stylesheet')
			link(href='/css/pickahit.css' rel='stylesheet')

		block scripts
			script(src='/js/jquery-3.2.1.min.js' type='text/javascript')
			script(src='/js/bootstrap-4.6.0.bundle.min.js' type='text/javascript')
			script(src='/js/login.js' type='text/javascript')

		link(href='/images/favicon.ico' rel='icon')

	body
		include nav.pug

		div.container.pb-3
			block content

		div#content
			block bigBoard

		div.modal.fade#modal
			div.modal-dialog
				div.modal-content
					div.modal-header
						h5.modal-title
						button.close(type='button' data-dismiss='modal')
							span &times;

					div.modal-body
						div.container-fluid
							div.row
								div.col-12.col-sm-6.mb-4.mb-sm-0
									div#away-team
										div.name
										div.probable-pitcher
										div.batters.starting-lineup
										div.batters.bench

								div.col-12.col-sm-6
									div#home-team
										div.name
										div.probable-pitcher
										div.batters.starting-lineup
										div.batters.bench
