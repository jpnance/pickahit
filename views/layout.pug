include mixins.pug

doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='google' content='notranslate')

		block title

		block styles
			link(href='/css/bootstrap-4.6.0.min.css' rel='stylesheet')
			link(href='/css/pickahit.css' rel='stylesheet')

		block scripts
			script(src='/js/jquery-3.2.1.min.js' type='text/javascript')
			script(src='/js/bootstrap-4.6.0.bundle.min.js' type='text/javascript')

		link(href='/images/favicon.ico' rel='icon')

	body
		-
			var navItems = [];

			// navItems.push({ name: 'Rules', href: '/rules' });

			if (session) {
				navItems.push({ name: 'Log Out', href: process.env.LOGIN_SERVICE + '/sessions/delete' });
			}
			else {
				navItems.push({ name: 'Log In', href: '/login' });
			}


		nav.navbar.navbar-expand-md.navbar-light.bg-light.sticky-top.mb-3
			a.navbar-brand(href='/')
				img.logo.mr-2(src='/images/logo.png')
				strong.align-middle Pick-a-Hit
			button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav')
				span.navbar-toggler-icon
			div.collapse.navbar-collapse#navbarNav
				ul.navbar-nav
					each navItem in navItems
						if navItem.name == 'Log Out'
							li.nav-item.dropdown.py-1
								a.nav-link.dropdown-toggle(href='#' data-toggle='dropdown')
									| Log Out

								div.log-out.dropdown-menu.py-0
									a.this-device.dropdown-item(href=process.env.LOGIN_SERVICE + '/sessions/delete') This Device
									a.all-devices.dropdown-item(href=process.env.LOGIN_SERVICE + '/sessions/deleteAll') All Devices
						else
							li.nav-item.py-1
								a.nav-link(href=navItem.href) #{navItem.name}

		div.table-responsive#content
			block content
